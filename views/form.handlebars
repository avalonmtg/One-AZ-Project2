      <div class="card" id="form">
        <div class="card-header">
          Add Your Organization and Create a Password
        </div>
        <div class="card-body">
          <form action="" method="POST" role="form" id="create">

            <div class="form-group">
              <label for="">Name</label>
              <input type="text" class="form-control" id="name" placeholder="">
            </div>

            <div class="form-group">
              <label for="">Email</label>
              <input type="text" class="form-control" id="email" placeholder="">
            </div>

            <div class="form-group">
              <label for="">Phone</label>
              <input type="text" class="form-control" id="phone" placeholder="">
            </div>

            <div class="form-group">
              <label for="">URL</label>
              <input type="text" class="form-control" id="url" placeholder="">
            </div>

            <div class="form-group">
              <label for="">Description</label>
              <input type="text" class="form-control" id="description" placeholder="">
            </div>

            <div class="form-group">
              <label for="">Days</label>
              <input type="text" class="form-control" id="days" placeholder="">
            </div>

            <div class="form-group">
              <label for="">Address</label>
              <input type="text" class="form-control" id="address" placeholder="">
            </div>

            <div class="form-group">
              <label for="">Password</label>
              <input type="password" class="form-control" id="signup-password" placeholder="">
            </div>
            <br>

            <h3>Select Each Service that Applies to Your Organization</h3>

            <div class="form-group">
              <input type="checkbox" id="food" name="food" value="" class = "checked">
              <label for="food"> Food</label><br>
            </div>

            <div class="form-group">
              <input type="checkbox" id="shelter" name="shelter" value="" class = "checked">
              <label for="shelter"> Shelter</label><br>
            </div>

            <div class="form-group">

              <input type="checkbox" id="daycare" name="daycare" value="" class = "checked">
              <label for="daycare"> Daycare</label><br>
            </div>

            <div class="form-group">

              <input type="checkbox" id="health" name="health" value="" class = "checked">
              <label for="health"> Mental Health</label><br><br>

            </div>

            <div class="text-right">
              <button type="submit" class="btn btn-primary btn-md" id="add-btn">
                <span class="fa fa-fire"></span> Submit</button>
            </div>

          </form>
